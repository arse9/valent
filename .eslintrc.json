{
  "extends": "next/core-web-vitals",
  "plugins": ["unused-imports"],
  "rules": {
    "no-unused-vars": "off", // Disable the rule globally for unused variables
    "unused-imports/no-unused-imports": "off", // Disable unused imports check
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/no-unescaped-entities": "off"
  }
}
